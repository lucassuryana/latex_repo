keywords = {Collaborative driving,driver modeling,haptic shared control (HSC),human-machine interaction,model predictive control (MPC)},
number = {3},
pages = {1201--1211},
publisher = {IEEE},
title = {{MPC-Based Haptic Shared Steering System: A Driver Modeling Approach for Symbiotic Driving}},
volume = {26},
year = {2021}
}
